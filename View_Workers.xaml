<Window x:Class="Gas_Station.View_Workers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gas_Station"
        mc:Ignorable="d"
        Title="View_Workers" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding GridView, Mode=TwoWay}" SelectedItem="{Binding SelectedWorker}" HorizontalAlignment="Left" Height="250" Margin="36,65,0,0" VerticalAlignment="Top" Width="620" SelectionChanged="GridWorkers_SelectionChanged"/>
        <Button  x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="666,65,0,0" VerticalAlignment="Top" Width="99" Height="46" Click="Add_Click"/>
        <Button  x:Name="Update" Content="Update" HorizontalAlignment="Left" Margin="666,151,0,0" VerticalAlignment="Top" Width="99" Height="66" Click="Update_Click"/>
        <Button  x:Name="Delete" Content="Delete" HorizontalAlignment="Left" Margin="666,249,0,0" VerticalAlignment="Top" Width="99" Height="66" Click="Delete_Click"/>
    </Grid>
</Window>
